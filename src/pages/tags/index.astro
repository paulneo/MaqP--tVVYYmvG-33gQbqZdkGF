---
import Layout from '../../layouts/Layout.astro';

const allPosts = await Astro.glob('../../content/blog/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];

const pageTitle = "Índice de etiquetas";

---
<Layout title={pageTitle} description="Explora cómo el etiquetado adecuado en maquinaria pesada no solo cumple con las normativas de seguridad sino que también optimiza el mantenimiento y la operación.">
  <ul>
    {tags.map((tag) => (
      <p><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </ul>
</Layout>