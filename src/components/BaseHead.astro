---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';


interface Props {
	title: string;
	description: string;
	image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = '/blog-about.jpg' } = Astro.props;
const isProd = import.meta.env.PROD;

---


<!-- Google tag (gtag.js) -->
{isProd && (
  <>
    <script type="text/partytown" is:inline async  src="https://www.googletagmanager.com/gtag/js?id=G-0Y68R8Q8D0"></script>
    <script type="text/partytown" is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-0Y68R8Q8D0');
    </script>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7253543815310863"
        crossorigin="anonymous"></script>
  </>
)}



<!-- Global Metadata -->
<meta name="google-site-verification" content="t66xXU0ITMggCnB1QLKpJ68rl0MDGnyso2Ju38mp9TY" />
<meta name="google-adsense-account" content="ca-pub-7253543815310863">

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/png+xml" href="/favicon.png" />
<meta name="generator" content={Astro.generator} />
<link rel="sitemap" href="/sitemap-index.xml" />
<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={`${title} | Mundo Ingenieria `} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="article" />
<meta property="og:type" content="website" />

<meta property="og:url" content={Astro.url} />
<meta property="article:publisher" content="https://www.facebook.com/mundoingenieria2024">
<meta property="og:site_name" content="Mundo IngenierÃ­a">
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL('/favicon.png', Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL('/favicon.png', Astro.url)} />
